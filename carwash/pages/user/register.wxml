<view class="form">

  <view class="form-title">手机号码</view>
  <view class="form-input">
    <input placeholder='请输入手机号码' bindinput="inputPhone" />
  </view>
  <view class="form-input input2 form-inar">
    <input placeholder='请输入验证码' bindinput="inputCode"/>
    <button bindtap='sendCode' style='z-index:1000'>获取验证码</button>
  </view>

  <button type="button" class="form-submit" bindtap="register">注册</button>

</view>