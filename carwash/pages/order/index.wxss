/* pages/order/index.wxss */

page {
  background: #f5f5f5;
}

.topbar {
  background: #37bca1;
  position: fixed;
  width: 100%;
  z-index: 10;
}

.topbar .topbar-item {
  border-bottom: 4rpx solid #37bca1;
  color: white;
  float: left;
  font-size: 30rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  width: 25%;
}

.topbar .topbar-item text {
  border-bottom: 2rpx solid #37bca1;
  display: inline-block;
  width: 180rpx;
}

.topbar .topbar-item text.active {
  border-bottom: 2rpx solid white;
}

