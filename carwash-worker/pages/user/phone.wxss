/* pages/user/addr_add.wxss */

page {
  background: #f5f5f5;
}

.form {
  font-size: 30rpx;
  margin: 0rpx;
}

.form::before, .form::after {
  border: 0rpx;
}

.form .weui-cell {
  padding: 6rpx 30rpx;
}

.form .weui-cell::before {
  border-color: #f5f5f5;
  left: 0rpx;
}

.form_sub {
  background: #37bca1;
  color: white;
  font-size: 34rpx;
}

.picker-region {
  border: none;
  line-height: 35px;
}

.door_log {
  background: white;
  border-top: 1rpx solid #f5f3f3; 
  padding: 0 30rpx 5rpx;
}

.door_log_title {
  font-size: 30rpx;
  height: 83rpx;
  line-height: 83rpx;
}

.door_log_list view.item {
  float: left;
  height: 180rpx;
  margin: 0 20rpx 20rpx 0rpx;
  overflow: hidden;
  width: 180rpx;
}

.door_log_list view.item image {
  vertical-align: middle;
  width: 100%;
}
